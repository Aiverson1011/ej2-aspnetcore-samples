@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click/Touch the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new tab</a>
        </div>

    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var URL = location.href.replace(location.search, '');
        document.getElementById('newTab').setAttribute("href", URL.split("Sidebar")[0] + "Sidebar/SidebarList");
        document.getElementById('newTab').setAttribute("target", "_blank");
        // Expand the Sidebar
    });
</script>

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>

@section ActionDescription{
    <div id="action-description">
        <p>
            Click/Touch the button to view the Sidebar sample in new tab.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            In this sample, the ListView component is placed inside the Sidebar for navigation.

        </p>
    </div>

}
@section Title{
                    <title>ASP.NET Core Sidebar Sidebar With ListView Example - Syncfusion Demos </title> 
                }
@section Meta{
                    <meta name="description" content="This example demonstrates the Sidebar With ListView in ASP.NET Core Sidebar control. Explore here for more details."/>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Sidebar With ListView in ASP.NET Core Sidebar Control</h1>
                }