<body>
    <!-- sample level element  -->
    <div id="wrapper">
        <div class="col-lg-12 col-sm-12 col-md-12">
            <div id="head">
                <div class="text">Menu</div>
                <span id="hamburger" class="e-icons menu"></span>
                <div class="header">Header Content</div>
            </div>
            <!-- sidebar element declaration -->
            <ejs-sidebar id="sidebar-menu" width="250px" type='@Syncfusion.EJ2.Navigations.SidebarType.Over'>
                <e-content-template>
                    <div id="close" class="e-icons"></div>
                    <div class="content-area">
                        <!--Listview control declaration-->
                        <ejs-listview id="menuList" enable="true" dataSource="ViewBag.dataSource" select="onSelect"></ejs-listview>
                        <e-listview-fieldsettings tooltip="text">
                        </e-listview-fieldsettings>
                    </div>
                </e-content-template>
            </ejs-sidebar>
            <!-- end of sidebar element -->
            <!-- main content declaration -->
            <div>
                <div class="content">Application content</div>
            </div>
            <!--end of main content declaration -->
        </div>
        <title>Essential JS 2 (Preview) for ASP.Net Core Sidebar-> Sidebar With ListView</title>
    </div>
</body>
</html>

<script>


    document.addEventListener('DOMContentLoaded', function () {
        sidebarInstance = document.getElementById('sidebar-menu').ej2_instances[0];
        document.getElementById('close').onclick = function () {
            sidebarInstance.hide();
        };
        document.getElementById('hamburger').onclick = function () {
            sidebarInstance.show();
        };
    });
    function onSelect(args) {
        //Listview select event handler
        document.querySelector('.content').textContent = args.text + ' Page Content';
        sidebarInstance.hide();
    }


</script>

