@using Syncfusion.EJ2

@section ControlsSection
    {
    <div class="control-section">
        @{Html.BeginForm("Conformance", "Pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    Click the button to view a PDF/A conformance document generated by Essential PDF. Please note
                    that Adobe Reader or its equivalent is required to view the resultant document.
                </div>
                <br />
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
                                <table>
                                    <tr>
                                        <td align="left" width="100%">
                                            <span style="display: inline-block; width: 165px; margin-left: 10px">

                                                @Html.EJS().RadioButton("radioButton1").Label("PDF/A-1b").Name("radioButton").Value("Pdf_A1B").Checked(true).Render()
                                            </span>
                                            <span style="display: inline-block; width: 165px; margin-left: 10px">
                                                @Html.EJS().RadioButton("radioButton2").Label("PDF/A-2b").Name("radioButton").Value("Pdf_A2B").Checked(false).Render()
                                            </span>
                                            <span style="display: inline-block; width: 165px; margin-left: 10px">
                                                @Html.EJS().RadioButton("radioButton3").Label("PDF/A-3b").Name("radioButton").Value("Pdf_A3B").Checked(false).Render()
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>&nbsp;</div>
                            <div>
                                <input type="submit" class="e-btn" value="Generate PDF" style="width: 150px; text-transform:capitalize" />
                            </div>
                        </div>
                    </div>
                </div>

                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates various PDF conformance support in Essential PDF. Essential PDF provides support for PDF/A-1b, PDF/A-2b, and PDF/A-3b conformance.
    </div>
}
@section Meta{
    <meta name="description" content="Example [C#] to create PDF document in ASP.NET Core using Syncfusion .NET PDF library." />
}
@section Description{
    <div id="description" style="margin-top: 10px">
        This feature can be used for long term archiving and standardization. More information about conformance can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-pdf-conformance">section</a>.
    </div>
}
