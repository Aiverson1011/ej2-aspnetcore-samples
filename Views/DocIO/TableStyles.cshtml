@using Syncfusion.EJ2
@{ViewBag.Title = "   Essential DocIO (Word) : Table Styles : Syncfusion";}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("TableStyles", "DocIO", FormMethod.Post);
            {
                <div style="margin-top: 10px;font-size:14px">
                    Click the button to view the generated Word document. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document.
                    <div style="margin-top: 10px">
                        <div>
                            Save As :
                            <input type="radio" id="rdButtonDocx" name="Group1" value="WordDocx" style="margin-left: 7px" checked="checked" />
                            <label for="rdButtonDocx" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Docx format">DOCX</label>
                            &nbsp;
                            <input type="radio" id="rdButtonWordML" name="Group1" value="WordML" style="margin-left: 7px" />
                            <label for="rdButtonWordML" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as WordML format">WordML</label>
                        </div>
                    </div>
                    <div style="margin-top: 8px">
                        <input id="generate" name="Button" class="e-btn" type="submit" value="Generate Document" style="width:170px; text-transform:capitalize" />
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div>
        This sample demonstrates how to apply built-in styles to the tables of the Word document using Essential DocIO.
    </div>
}
@section Description{
    <div>
        DocIO supports all the built-in table styles, equivalent to Microsoft Word. With DocIO, you can apply built-in table styles for the Word Open XML Format document (DOCX, DOTX, DOCM, DOTM).
        <ul>
            <li>
                Table styles includes table, row, cell, paragraph and text level formatting.
            </li>
            <li>
                You can apply special formatting the options for first column, last column, banded rows, banded columns, header row and last row.
            </li>
        </ul>
    </div>
    <div style="margin-top: 15px">
        More information about the table styles can be found in this
        <a href="https://help.syncfusion.com/file-formats/docio/working-with-tables#working-with-table-style">documentation</a>
        section.
    </div>
}
@section Meta{
    <meta name="description" content="This sample demonstrates how to apply built-in styles to the tables in a Word document in ASP.NET MVC using Syncfusion DocIO (Word) library." />
}