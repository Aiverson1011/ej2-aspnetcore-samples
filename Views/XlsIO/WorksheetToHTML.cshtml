@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section">
        <p style="font-weight:normal">
            Click the button below to view the converted HTML document using Essential XlsIO.
        </p>
        <br />
        
        <div class="celldiv">
            <table>
                <tr>
                    <td>
                        <h5>Convert Type:</h5>
                    </td>
                    <td>
                    &nbsp;&nbsp;&nbsp;
                    </td>
                    <td>
                        @Html.EJS().RadioButton("radio1").Label("Workbook").Name("select").Value("Workbook").Checked(true).Render()
                    </td>
                    <td>
                        &nbsp;&nbsp;&nbsp;
                    </td>
                    <td>
                        @Html.EJS().RadioButton("radio2").Label("Worksheet").Name("select").Value("Worksheet").Checked(false).Render()
                    </td>
                </tr>
            </table>
        </div>
        <br />
        <div class="celldiv">
            <input id="inputbtn" class="e-btn" type="submit" name="inputbtn" value="Input Template" style="width:150px;padding-left:0.5em"/>
            <input id="convertbtn" class="e-btn" type="submit" name="convertbtn" value="Convert" style="width:150px;padding-left:0.5em"/>
        </div>
    </div>
    <script>
    document.getElementById('inputbtn').onclick = function () {
        location.href = '@Html.Raw(@Url.Action("WorksheetToHTML", new { button= "Input Template", SaveOption = "Workbook" }))';
    };
    document.getElementById('convertbtn').onclick = function () {
        if (document.getElementById('radio1').checked == true)
            location.href = '@Html.Raw(@Url.Action("WorksheetToHTML", new { button = "Convert To HTML", SaveOption = "Workbook" }))';
        else
            location.href = '@Html.Raw(@Url.Action("WorksheetToHTML", new { button = "Convert To HTML", SaveOption = "Worksheet" }))';
        };
    </script>
}
}
@section ActionDescription{
    This sample demonstrates how to convert Worksheets to html files using Essential XlsIO.
}

@section Meta{
    <meta name="description" content="This sample demonstrates how to convert Excel file to HTML in ASP.NET Core using Syncfusion XlsIO (Excel) library." />
}
@section Description{
    <div class="rowdiv">
        This sample demonstrates how a worksheet or workbook is converted to HTML. The
        output file can be saved to disc and also as a memory stream.
        <br />
    </div>
}