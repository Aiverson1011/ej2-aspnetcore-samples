@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to create macros using XlsIO.
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Create Macro in ASP.NET Core XlsIO control. Explore here for more details."/>
                }

@section Description{
    Essential XlsIO supports creating macro files from scratch programmatically. 
    <br />
    <br /><b>Features:</b>
    <br />
    <br />
    <ul>
        <li>Create Excel chart from macro code for the data provided in the Excel workbook.</li>
        <li>Save the macro-enabled file in various file formats (XLS, XLSM, XLTM).</li>
    </ul>
}

@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("CreateMacro", "XlsIO", FormMethod.Post);
            <p style="font-weight:normal">
                Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
            </p>
            <br />
            <h5>  Save As :</h5>
            <div class="celldiv">
                <table>
                    <tr>
                        <td>
                            @Html.EJS().RadioButton("radio1").Label("XLS").Name("SaveOption").Value("ExcelXls").Checked(false).Render()
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio2").Label("XLTM").Name("SaveOption").Value("ExcelXltm").Checked(false).Render()
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio3").Label("XLSM").Name("SaveOption").Value("ExcelXlsm").Checked(true).Render()
                        </td>
                    </tr>
                </table>
            </div>
            <br />
            <div class="celldiv">
                <input id="createbtn" class="e-btn" type="submit" name="button" value="Create Document" style="width:160px;" />
            </div>
        }
    </div>
}
@section Title{
                    <title>ASP.NET Core XlsIO Create Macro Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Create Macro in ASP.NET Core XlsIO Control</h1>
                }