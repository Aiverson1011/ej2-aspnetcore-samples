@using Syncfusion.EJ2.Maps;
@section ControlsSection{
    @{
        var TextStyle = new MapsFont
        {
            Size = "16px"
        };
        var CenterPosition = new
        {
            latitude = 40.7489,
            longitude = -73.9680
        };

        var markers = new List<Syncfusion.EJ2.Maps.MapsMarker>
        {
            new Syncfusion.EJ2.Maps.MapsMarker
            {
                Visible = true,
                Template = "<div><img src=../styles/images/maps/ballon.png style=height:30px;width:20px;></img></div>",
                TooltipSettings = new MapsTooltipSettings { Visible = true, ValuePath="name" },
                DataSource = new[]
                {
                    new
                    {
                        name="Manhattan, New York, USA",
                        latitude=40.7489,
                        longitude=-74.968
                    }

                }
               }

        };
    }
    <div class="control-section">
        <div class="row">
            <div class="col-md-12">
                <ejs-maps id="maps" centerPosition="CenterPosition">
                    <e-maps-titlesettings alignment="@Syncfusion.EJ2.Maps.Alignment.Center" text="Headquarters of United Nations" textStyle="TextStyle">
                    </e-maps-titlesettings>
                    <e-maps-zoomsettings zoomFactor="5" enable="true"></e-maps-zoomsettings>
                    <e-maps-annotations>
                        <e-maps-annotation content="<div style=height:18px;width:170px;background:white;text-align:center><a href=https://www.openstreetmap.org/copyright target=_blank>©OpenStreetMap contributors</a></div>"
                                           verticalAlignment="@Syncfusion.EJ2.Maps.AnnotationAlignment.Far" horizontalAlignment="@Syncfusion.EJ2.Maps.AnnotationAlignment.Far" zIndex="1" x="-40" y="-20"></e-maps-annotation>
                    </e-maps-annotations>
                    <e-maps-layers>
                        <e-maps-layer layerType="@Syncfusion.EJ2.Maps.ShapeLayerType.OSM" markerSettings="markers">
                        </e-maps-layer>
                    </e-maps-layers>
                </ejs-maps>
                <div style="float: right; margin-right: 10px;">
                    Source:
                    <a href="https://en.wikipedia.org/wiki/Headquarters_of_the_United_Nations" target="_blank">en.wikipedia.org</a>
                </div>
            </div>
        </div>
    </div>
}
@section Description{
    <div id="description">
        <p>
            In this example, you can see how to render an Open Street Map. Also denoted the location of United Nations Headquarters using
            marker.
        </p>
        <br />
        <p style="font-weight: 500">Injecting Module</p>
        <p>
            Maps component features are segregated into individual feature-wise modules. To use marker and zooming features, inject the
            Marker module using the
            <code>Maps.Inject(Marker)</code> method and Zoom module using
            <code>Maps.Inject(Zoom)</code> method.
        </p>
    </div>
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample visualizes the location of United Nations Headquarters in an Open Stree Map.
        </p>
    </div>
}
