@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            @Html.ActionLink("Open in New Tab", "SectionFormatView", "DocumentEditor", null, new { @class = "e-btn", @target = "_blank" })
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
        <p>This example demonstrates section formatting options in document editor such as page margins, page size, header distance
            from top, and footer distance from bottom. </p>
    </div>
}

@section Description{
    <div id="description">
        <div>
            <p>Section formatting features in the document editor.</p>
            <ul>
                <li>Page size and page margins.</li>
                <li>Header distance from the top.</li>
                <li>Footer distance from the bottom.</li>
            </ul>
            <p style="display: block"> More information about the document editor features can be found in this <a target="_blank"
                    href="https://ej2.syncfusion.com/aspnetcore/documentation/document-editor/getting-started-core.html">documentation section.</a>
            </p>
        </div>
    </div>
}

@section Scripts{
    <script></script>
}
@section Meta{
    <meta name="description" content="The Document Editor supports section formatting such as page size, page margins, header distance and footer distance." />
}

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>
